# LeadGen API Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Application
# ===========================================
APP_NAME=LeadGen API
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development  # development, staging, production

# ===========================================
# Database (PostgreSQL)
# ===========================================
POSTGRES_USER=leadgen
POSTGRES_PASSWORD=leadgen_secret
POSTGRES_DB=leadgen
POSTGRES_PORT=5432

# Full database URL (used by the app)
DATABASE_URL=postgresql+asyncpg://leadgen:leadgen_secret@localhost:5432/leadgen

# ===========================================
# Redis
# ===========================================
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# ===========================================
# Celery
# ===========================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ===========================================
# API Ports
# ===========================================
API_PORT=8000
FLOWER_PORT=5555

# ===========================================
# Flower (Celery Monitoring)
# ===========================================
FLOWER_USER=admin
FLOWER_PASSWORD=admin

# ===========================================
# Security
# ===========================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-me-in-production-min-32-chars
API_KEY_SALT=change-me-salt

# ===========================================
# LinkedIn Scraping - RapidAPI
# ===========================================
# Get your key from: https://rapidapi.com/freshdata-freshdata-default/api/fresh-linkedin-profile-data
RAPIDAPI_KEY=
RAPIDAPI_HOST=fresh-linkedin-profile-data.p.rapidapi.com

# ===========================================
# LinkedIn Scraping - Bright Data (Optional/Fallback)
# ===========================================
BRIGHTDATA_API_KEY=
BRIGHTDATA_ZONE=

# ===========================================
# Scraping Rate Limits
# ===========================================
SCRAPING_DEFAULT_RATE_LIMIT=100  # per minute
SCRAPING_MAX_CONCURRENT=50
SCRAPING_RETRY_ATTEMPTS=3

# ===========================================
# Email Verification (MailTester.ninja)
# ===========================================
# Get your API key from: https://mailtester.ninja/
# Pro Plan: 35 emails per 30 seconds (~70/min)
MAILTESTER_NINJA_API_KEY=
EMAIL_VERIFICATION_TIMEOUT=10

# ===========================================
# AI Providers (System Defaults)
# ===========================================
# OpenAI - Get key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic - Get key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Google AI - Get key from: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=

# ===========================================
# AI Configuration
# ===========================================
AI_DEFAULT_MODEL=gpt-4o-mini
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
AI_REQUESTS_PER_MINUTE=60

# ===========================================
# CSV Import
# ===========================================
CSV_IMPORT_CHUNK_SIZE=10000
CSV_MAX_FILE_SIZE_MB=500

# ===========================================
# CORS (JSON array of allowed origins)
# ===========================================
CORS_ORIGINS=["*"]
