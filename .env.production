# LeadGen API â€” Production Environment
# Copy to .env on the server and fill in values marked with CHANGE_ME

# ===========================================
# Application
# ===========================================
APP_NAME=LeadGen API
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=production

# ===========================================
# Database (PostgreSQL)
# ===========================================
POSTGRES_USER=leadgen
POSTGRES_PASSWORD=CHANGE_ME_strong_db_password
POSTGRES_DB=leadgen

# ===========================================
# Security
# ===========================================
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(48))"
SECRET_KEY=CHANGE_ME_generate_a_secret_key
API_KEY_SALT=CHANGE_ME_generate_a_salt

# ===========================================
# Flower (Celery Monitoring)
# ===========================================
FLOWER_USER=admin
FLOWER_PASSWORD=CHANGE_ME_flower_password

# ===========================================
# LinkedIn Scraping - RapidAPI
# ===========================================
# Get your key from: https://rapidapi.com/freshdata-freshdata-default/api/fresh-linkedin-profile-data
RAPIDAPI_KEY=
RAPIDAPI_HOST=fresh-linkedin-profile-data.p.rapidapi.com

# ===========================================
# LinkedIn Scraping - Bright Data (Optional)
# ===========================================
BRIGHTDATA_API_KEY=
BRIGHTDATA_ZONE=

# ===========================================
# Scraping Rate Limits
# ===========================================
SCRAPING_DEFAULT_RATE_LIMIT=100
SCRAPING_MAX_CONCURRENT=50
SCRAPING_RETRY_ATTEMPTS=3

# ===========================================
# Email Verification (MailTester.ninja)
# ===========================================
# Get your API key from: https://mailtester.ninja/
MAILTESTER_NINJA_API_KEY=
EMAIL_VERIFICATION_TIMEOUT=10

# ===========================================
# AI Providers (optional, for Phase 3)
# ===========================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_AI_API_KEY=

# ===========================================
# AI Configuration
# ===========================================
AI_DEFAULT_MODEL=gpt-4o-mini
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
AI_REQUESTS_PER_MINUTE=60

# ===========================================
# CSV Import
# ===========================================
CSV_IMPORT_CHUNK_SIZE=10000
CSV_MAX_FILE_SIZE_MB=500

# ===========================================
# CORS (tighten this when you have a frontend)
# ===========================================
CORS_ORIGINS=["*"]
